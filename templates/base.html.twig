<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark" aria-label="Third navbar example">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}">Vahiné Beauté Institut</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample03" aria-controls="navbarsExample03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarsExample03">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle {% if activeController is defined and activeController == "author"%}active{% endif %}" href="#" id="dropdown03" data-bs-toggle="dropdown" aria-expanded="false">Auteurs</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown03">
                                <li><a class="dropdown-item" href="{{ path('author_index')}}">Voir</a></li>
                                <li><a class="dropdown-item" href="{{ path('author_new')}}">Ajouter</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle {% if activeController is defined and activeController == "publisher"%}active{% endif %}" href="#" id="dropdown03" data-bs-toggle="dropdown" aria-expanded="false">Éditeurs</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown03">
                                <li><a class="dropdown-item" href="{{ path('publisher_index')}}">Voir</a></li>
                                <li><a class="dropdown-item" href="{{ path('publisher_new')}}">Ajouter</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle {% if activeController is defined and activeController == "book"%}active{% endif %}" href="#" id="dropdown03" data-bs-toggle="dropdown" aria-expanded="false">Livres</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown03">
                                <li><a class="dropdown-item" href="{{ path('book_index') }}">Voir</a></li>
                                <li><a class="dropdown-item" href="{{ path('book_new') }}">Ajouter</a></li>
                            </ul>
                        </li>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li class="nav-item">
                                <a class="nav-link {% if activeController is defined and activeController == "register" %}active{% endif %}" href="{{ path('logout') }}">Se déconnecter</a>
                            </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link {% if activeController is defined and activeController == "login" %}active{% endif %}" href="{{ path('login') }}">Se Connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if activeController is defined and activeController == "register" %}active{% endif %}" href="{{ path('register') }}">S'inscrire</a>
                        </li>
                        {% endif %}
                    </ul>
                    <form>
                        <input class="form-control" type="text" placeholder="Search" aria-label="Search">
                    </form>
                </div>
            </div>
        </nav>
        <div class="container mt-5">
            {% block body %}{% endblock %}
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
